{
  "name": "@rivium/modyo-widget-vue-3",
  "description": "Widget Template for Modyo with a configuration for VueJS 3",
  "engines": {
    "node": "18.x"
  },
  "license": "MIT",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisfalconmx/modyo-widget-vue-3.git"
  },
  "keywords": [
    "typescript",
    "postcss",
    "tailwindcss",
    "vue3",
    "vite",
    "modyo"
  ],
  "author": "rivium",
  "contributors": [
    "luisfalconmx <luisfalconmx@gmail.com>",
    "juancmandev <whenix.developer@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/luisfalconmx/modyo-widget-vue-3/issues"
  },
  "homepage": "https://github.com/luisfalconmx/modyo-widget-vue-3#readme",
  "scripts": {
    "start": "vite --host",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "prepush": "npm run format && npm run lint && npm run type-check",
    "push": "npm run build-only && npm run modyo-push",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "build-only": "vite build",
    "modyo-push": "modyo-cli push"
  },
  "dependencies": {
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@modyo/cli": "^3.1.27",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.8",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.14.1",
    "jsdom": "^22.0.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vue-tsc": "^1.6.4"
  }
}
